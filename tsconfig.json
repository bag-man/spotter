{
  "compilerOptions": {
    "rootDir":"./src",
    "outDir": "./build/",
    "module": "commonjs",
    "target": "ES2019",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots" : ["./node_modules/@types", "./src/types" ],
    "lib": ["dom", "es2019", "esnext.asynciterable"]
  }, 
  "include": [
    "./src/"
  ]
}
