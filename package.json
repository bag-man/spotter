{
  "name": "dotheyhateus",
  "version": "1.0.0",
  "description": "Prevent nazis manipulating reddit",
  "scripts": {
    "clean": "rm -rf build/",
    "start": "node ./build/bin/server.js",
    "seed": "node ./build/bin/seed.js",
    "lint": "eslint '*/**/*.ts' -f unix",
    "lint:fix": "eslint '*/**/*.ts' -f unix --fix",
    "build:css": "./node_modules/stylus/bin/stylus src/assets/css/index.styl -o build/assets/css",
    "build:js": "./node_modules/.bin/webpack -p",
    "build:frontend": "npm run build:css & npm run build:js",
    "build:backend": "tsc --project ./",
    "build": "npm run clean && npm run build:frontend && npm run build:backend",
    "watch:backend": "nodemon --watch 'src/**/*' --exclude 'src/assets/js/' -e ts,pug --exec 'npm run build:backend && node build/bin/server.js'",
    "watch:frontend": "nodemon --watch 'src/assets/' -e ts,styl --exec 'npm run build:frontend'",
    "watch": "npm run clean && npm run watch:backend & npm run watch:frontend",
    "test": "./node_modules/.bin/jest",
    "test:watch": "./node_modules/.bin/jest --watch"
  },
  "author": "bag-man",
  "license": "GPL",
  "dependencies": {
    "axios": "^0.19.2",
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "koa": "^2.11.0",
    "koa-router": "^8.0.8",
    "morgan": "^1.9.1",
    "pug": "^2.0.4",
    "reddit-ts": "^0.7.2",
    "ts-postgres": "^1.1.3"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/jest": "^25.1.3",
    "@types/koa": "^2.11.1",
    "@types/koa-router": "^7.4.0",
    "@types/morgan": "^1.7.37",
    "@types/node": "^13.7.4",
    "@types/pug": "^2.0.4",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "source-map-support": "^0.5.16",
    "stylus": "^0.54.7",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.1",
    "typescript": "^3.8.2",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": ".*\\.test.ts$",
    "moduleFileExtensions": [ "ts", "js" ]
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run build && npm run lint && npm run test"
    }
  },
  "eslintIgnore": [],
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended"
    ],
    "env": {
      "es6": true,
      "jest": true
    },
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "@typescript-eslint/member-delimiter-style": [
        2,
        {
          "multiline": {
            "delimiter": "none",
            "requireLast": false
          }
        }
      ],
      "@typescript-eslint/indent": [
        "error",
        2
      ],
      "@typescript-eslint/explicit-function-return-type": [
        "off"
      ],
      "@typescript-eslint/no-use-before-define": [
        "off"
      ],
      "semi": [
        "error",
        "never"
      ],
      "camelcase": [
        2,
        {
          "properties": "always"
        }
      ],
      "comma-style": [
        "error",
        "last"
      ],
      "complexity": [
        2,
        6
      ],
      "curly": [
        2,
        "multi-line"
      ],
      "indent": 0,
      "max-len": [
        2,
        120,
        2
      ],
      "max-nested-callbacks": [
        2,
        10
      ],
      "max-params": [
        2,
        7
      ],
      "max-statements": [
        2,
        25
      ],
      "no-path-concat": 0,
      "no-unused-vars": [
        2,
        "all"
      ],
      "padded-blocks": [
        "error",
        "never"
      ],
      "space-before-function-paren": [
        2,
        "always"
      ]
    }
  }
}
