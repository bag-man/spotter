extend ./header
include ./components

block content 
  div.header
    +search(author)

  div.container
    div.table-responsive
      table.table
        thead
          tr
            th.col-md-1 Author
            th.col-md-1 Comments
            th.col-md-10 Subreddits
        tbody
          each item in leaderboard.rows
            tr
              td
                a(href='/' + item[1]) #{item[1]}
              td #{item[0]}
              td #{item[2].join(', ')}
                
