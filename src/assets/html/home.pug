extend ./header

block content 
  div.header
    form(action='javascript:redirect()' autocomplete='off')
      input.search(type='text', placeholder='Search for a reddit user', name='user', onfocus="this.value=''", value=author)

  if spots && spots.length
    div.container
      div.table-responsive
        table.table
          thead
            tr
              th.col-md-2 Author
              th.col-md-6 Title
              th.col-md-2 Time
              th.col-md-1 Subreddit
              th.col-md-1 Score
          tbody
            each spot in spots
              tr
                td 
                  a(href=`/${spot.author}/`) #{spot.author}
                td.wrap
                  a(href=spot.shortLink) #{spot.title}
                td #{spot.since}
                td #{spot.subreddit}
                td #{spot.score}pts
